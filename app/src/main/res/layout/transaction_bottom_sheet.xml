<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:id="@+id/bsp_transact">

        <TextView
            android:id="@+id/bsv_transactionid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction ID: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/bsv_transactiontype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bsv_transactionid"
            android:text="Type: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/bsv_transactiondate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bsv_transactiontype"
            android:text="Date: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/bsv_transactionpartner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bsv_transactiondate"
            android:text="Partner: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/bsv_transactionamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bsv_transactionpartner"
            android:text="Amount; "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/bsv_transactiondetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bsv_transactionamount"
            android:text="Details: "
            android:textColor="@color/black" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bsv_deletetransaction"
            android:text="Delete"
            android:layout_below="@+id/bsv_transactiondetails"
            android:layout_marginRight="10dp">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bsv_edittransaction"
            android:text="Edit"
            android:layout_below="@+id/bsv_transactiondetails"
            android:layout_toRightOf="@+id/bsv_deletetransaction"></Button>
    </RelativeLayout>


</RelativeLayout>