<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <EditText
            android:id="@+id/et_RingID"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:hint="Ring ID" />

        <EditText
            android:id="@+id/et_Name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/et_RingID"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:hint="Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/et_Name"
            android:id="@+id/spinnertext">

            <TextView
                android:id="@+id/tv_BirthYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birth Year"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="30dp"
                android:textSize="18sp"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:id="@+id/sp_BirthYear"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true" />
        </LinearLayout>


        <EditText
            android:id="@+id/et_Breed"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/spinnertext"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:hint="Breed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/et_Breed"
            android:id="@+id/genderLayout">

            <TextView
                android:id="@+id/tv_Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="30dp"
                android:textSize="18sp"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:id="@+id/sp_Gender"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_Color"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/genderLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:hint="Color" />

        <RadioGroup
            android:id="@+id/rg_Status"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/et_Color"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_Alive"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Alive"
                android:layout_marginHorizontal="10dp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_Dead"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Dead"
                android:layout_marginHorizontal="10dp" />

            <RadioButton
                android:id="@+id/rb_Sold"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Sold"
                android:layout_marginHorizontal="10dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/et_Notes"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/rg_Status"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:hint="Notes" />

        <Button
            android:id="@+id/bt_Save"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangular_border"
            android:backgroundTint="@color/teal_200"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </RelativeLayout>
</ScrollView>