<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.ProfilesActivity"
    android:padding="10dp"
    android:id="@+id/xml_profiles">

    <TextView
        android:id="@+id/tv_SelectProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Select a Profile"
        android:textSize="30sp">


    </TextView>
    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_SelectProfile"
        android:id="@+id/rc_Profiles"
        android:layout_centerHorizontal="true"></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/bt_AddProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangular_border"
        android:backgroundTint="@color/teal_200"
        android:text="Add Profiles"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <FrameLayout
        android:id="@+id/bs_Profiles"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>