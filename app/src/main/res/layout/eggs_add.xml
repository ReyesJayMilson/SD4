<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <EditText
            android:id="@+id/et_CageNo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:inputType="number"
            android:hint="Cage Number" />

        <EditText
            android:id="@+id/et_NestNo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/et_CageNo"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:inputType="number"
            android:hint="Nest Number" />

        <EditText
            android:id="@+id/et_LayDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/et_NestNo"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:hint="Laying Date" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/et_LayDate"
            android:id="@+id/spinnerParents">

            <TextView
                android:id="@+id/tv_Father"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:id="@+id/sp_Father"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_Mother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mother"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:id="@+id/sp_Mother"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true" />
        </LinearLayout>


        <EditText
            android:id="@+id/et_Quantity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/spinnerParents"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:hint="Quantiy"
            android:inputType="number"/>

        <Button
            android:id="@+id/bt_Save"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangular_border"
            android:backgroundTint="@color/teal_200"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </RelativeLayout>


</ScrollView>