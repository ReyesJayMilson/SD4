<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_profile"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_placeholder_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/defaultprofile_background"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="Profile image placeholder"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_placeholder_profile"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:id="@+id/idplaceholder_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder ID"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>





</androidx.cardview.widget.CardView>