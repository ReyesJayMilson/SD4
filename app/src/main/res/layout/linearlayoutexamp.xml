<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:visibility="visible"
        tools:text="Pigeon Breeder Management System" />

    <TextView
        android:id="@+id/tv_SelectBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="visible"
        tools:text="Select Breeder" />

    <Button
        android:id="@+id/btn_AddProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_ProfileList"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dp"
        android:background="@color/teal_200"
        android:text="@string/add_new_profile"
        android:textColor="@color/black"
        tools:ignore="TextContrastCheck" />

    <ListView
        android:id="@+id/lv_ProfileList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_SelectBreed"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="160dp"></ListView>

</RelativeLayout>
